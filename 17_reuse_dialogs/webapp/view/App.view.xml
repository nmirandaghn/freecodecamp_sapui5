<mvc:View
  controllerName="n.miranda.ui.controller.App"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  displayBlock="true"
>
  <Shell>
    <App class="myAppDemoWT">
      <pages>
        <Page title="{i18n>homePageTitle}">
          <headerContent>
            <Button 
              icon="sap-icon://hello-world"
              press=".onOpenDialog"
            />
          </headerContent>
          <content>
            <mvc:XMLView viewName="n.miranda.ui.view.HelloPanel" />
          </content>
        </Page>
      </pages>
    </App>
  </Shell>
</mvc:View>